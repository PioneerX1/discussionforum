<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pioneerx1.discussionforum.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fretboard Forum"
        android:id="@+id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="30sp"
        android:textStyle="bold"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A discussion forum for enthusiasts of string instruments"
        android:id="@+id/subtitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcomeTextView"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:layout_below="@+id/subtitleTextView"
        android:layout_marginTop="60dp"
        android:text="Enter the Forum"
        />

</RelativeLayout>
